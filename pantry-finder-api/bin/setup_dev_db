#!/usr/bin/env ruby

`bundle exec jets db:create db:schema:load`

puts 'Seeding dev and test databases'

user = ENV.fetch('DB_USER', 'root')
password = ENV.fetch('DB_PASS', '')
host = ENV.fetch('DB_HOST', '')

mysql_args = "-u #{user}"
mysql_args += " -p#{password}" unless password.empty?
mysql_args += " -h #{host}" unless host.empty?

unless ENV['JETS_ENV'] == 'test'
  `unzip -p setup/seed.sql.zip | mysql #{mysql_args} pantry_finder_api_development`
end

`unzip -p setup/seed.sql.zip | mysql #{mysql_args} pantry_finder_api_test`
